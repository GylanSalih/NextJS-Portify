const Card = ({ src, title, description, className, buttonClass, buttonHref, isGif }) => {
    const handleMouseEnter = (event) => {
        const video = event.currentTarget.querySelector('video');
        if (video) video.play(); // Startet das Video, wenn der Mouseover-Ereignis ausgelöst wird
    };

    const handleMouseLeave = (event) => {
        const video = event.currentTarget.querySelector('video');
        if (video) video.pause(); // Pausiert das Video, wenn der Mouseout-Ereignis ausgelöst wird
    };